{

  "manifest_version": 2,
  "name": "No Tag Colors",
  "description": "Disables tag colors in message list and toolbar items",
  "author": "Konrad Gr√§fe <kgraefe@paktolos.net>",
  "version": "1.2",

  "applications": {
	"gecko": {
		"id": "tb-no-tag-colors@paktolos.net",
		"strict_min_version": "78.0",
		"strict_max_version": "102.*"
	}
  },


  "background" : {
	  "scripts" : ["background.js"]
  },

  "experiment_apis": {
	"notagcolors": {
		"schema": "schema.json",
		"parent": {
			"scopes": ["addon_parent"],
			"paths": [["notagcolors"]],
			"script": "implementation.js"
		}
	}
  }
}
